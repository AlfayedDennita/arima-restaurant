{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error", 
      {
        "devDependencies": true, 
        "optionalDependencies": true, 
        "peerDependencies": false
      }
    ]
  }
}
